                {% endif %}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" method="post" class="bt-form">
                    <input type="text" name="new-email" id="new-user_email" placeholder="Adresse email">
                    <input type="text" name="new-username" id="new-pseudo" placeholder="Nom d'utilisateur">
                    <input type="password" name="new-password" id="new-password" placeholder="Mot de passe">
                    <button type="submit" name="registerSubmit" class="bt-button-login">Creér nouveau compte</button>
                </form>
            </div>
            <div class="modal-footer">
                <div class="bt-modal-footer-line"></div>
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">Se connecter</button>
                <img src="assets/images/FinishedLogoP2-modified.png" alt="Logo" class="bt-login-logo">
            </div>
        </div>
    </div>
</div>
