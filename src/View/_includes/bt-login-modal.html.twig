<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                {% if user is empty %}
                    <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Se connecter</h1>
                    {% if errorsLogin is not empty and login == 1 %}
                        {% set fieldTranslate = '' %}
                        {# {% if myVar in someOtherArray|keys %} #}
                        {% for fieldError, errorList in errorsLogin %}
                            {% for errorGravity, errorTypeArray in errorList %}
                                {% if 'fatal' in errorList|keys %}
                                    {% if errorGravity == 'fatal' %}
                                        {% for errorTypeKeys, errorContent in errorTypeArray %}
                                            {% if 'emptyField' in errorTypeArray|keys %}
                                                {% if errorTypeKeys == 'emptyField' %}
                                                    <h4 class="modal-title">
                                                        {% if fieldError == 'username' %}
                                                            {% set fieldTranslate = "nom d'utilisateur" %}
                                                        {% endif %}
                                                        {% if fieldError == 'password' %}
                                                            {% set fieldTranslate = 'mot de passe' %}
                                                        {% endif %}
                                                        {{ 'Votre ' ~ fieldTranslate ~ errorContent }}</h4>
                                                {% endif %}
                                            {% elseif 'emptyField' not in errortype|keys %}
                                                <h4 class="modal-title">{{ errorContent }}</h4>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                {% elseif 'fatal' not in errorList|keys %}
                                    {% for errorContent in errorType %}
                                        <h4 class="modal-title">{{ errorContent }}</h4>
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                {% endif %}
                {% if user is not empty %}
                    <h1 class="modal-title fs-5 d-flex" id="exampleModalToggleLabel">Bienvenue {{ user.user_name }}</h1>
                {% endif %}
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% if user is empty %}
                    <form action="" method="post" class="bt-form">
                        <input type="text" name="username" id="pseudo" placeholder="Nom d'utilisateur">
                        <input type="password" name="password" id="password" placeholder="Mot de passe">
                        <button type="submit" name="loginSubmit" class="bt-button-login">Se connecter</button>
                    </form>

                    <a href="#">Mot de passe oublié ?</a>
                {% endif %}

                {% if user is not empty %}
                    <a href="/user/show"><button class="bt-button-login bt-button-orange bt-button btn-primary" id="bt-button-to-profile"> Acceder à mon profil </button></a>
                    <form action="" method="post" class="bt-form">
                        <button onclick="checkerLogout()" type="submit" name="disconnectSubmit" class="bt-button-login">Se déconnecter</button>
                    </form>
                {% endif %}
            </div>

            <div class="modal-footer">
                <div class="bt-modal-footer-line"></div>
                {% if user is empty %}
                    <button class="btn btn-primary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Créer un compte</button>
                {% endif %}
                <img src="/assets/images/FinishedLogoP2-modified.png" alt="Logo" class="bt-login-logo">
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
